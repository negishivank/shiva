        label15 = tk.Label(mainWindow, text='', width=2, height=2)
        label15.config(bg='grey', font=('times', 24, 'italic'))
        label15.grid(row=14, column=3, padx=55, pady=5, ipadx=45, ipady=0)
        label15.config(text="total amount to be paid is including SGST=9% AND CGST =9%")
        label16 = tk.Label(mainWindow, text='', width=2, height=2)
        label16.config(bg='grey', font=('times', 24, 'italic'))
        label16.grid(row=15, column=3, padx=55, pady=5, ipadx=45, ipady=0)

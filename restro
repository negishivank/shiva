quant=0
price=0
tprice=0
quant1=0
quant2 = 0
quant3 = 0
quant4 = 0
quant5 = 0
quant6 = 0
total=0
def num(number):
    global total
    global quant
    global price
    global price1
    global price2
    global price3
    global price4
    global price5
    global price6
    global price7
    global tprice
    global quant1
    global quant2
    global quant3
    global quant4
    global quant5
    global quant6
    global tprice1
    global tprice2
    global tprice3
    global tprice4
    global tprice5
    global tprice6
    price1=225
    price2=350
    price3=450
    price4=150
    price5=215
    price6=220



    if number == 1:
        quant1=quant1+1
        price=quant1*price1
        tprice1=price
        price=0


        label13 = tk.Label(mainWindow, text='', width=2, height=2)
        label13.config(bg='white', font=('times', 24, 'italic'))
        label13.grid(row=3, column=5, padx=55, pady=5, ipadx=45, ipady=0)
        label13.config(text=tprice1)

        total=total+tprice1
        label17 = tk.Label(mainWindow, text='', width=2, height=2)
        label17.config(bg='white', font=('times', 24, 'italic'))
        label17.grid(row=5, column=8, padx=55, pady=5, ipadx=45, ipady=0)
        label17.config(text=total)

    elif number==2:
        quant2 = quant2 + 1
        price = quant2 * price2
        tprice2=price
        price=0

        label13 = tk.Label(mainWindow, text='', width=2, height=2)
        label13.config(bg='white', font=('times', 24, 'italic'))
        label13.grid(row=4, column=5, padx=55, pady=5, ipadx=45, ipady=0)
        label13.config(text=tprice2)

        total = total + tprice2
        label17 = tk.Label(mainWindow, text='', width=2, height=2)
        label17.config(bg='white', font=('times', 24, 'italic'))
        label17.grid(row=5, column=8, padx=55, pady=5, ipadx=45, ipady=0)
        label17.config(text=total)

    elif number == 3:
        quant3 = quant3 + 1
        price = quant3 * price3
        tprice3=price

        label13 = tk.Label(mainWindow, text='', width=2, height=2)
        label13.config(bg='beige', font=('times', 24, 'italic'))
        label13.grid(row=5, column=5, padx=55, pady=5, ipadx=45, ipady=0)
        label13.config(text=tprice3)

        total = total + tprice3
        label17 = tk.Label(mainWindow, text='', width=2, height=2)
        label17.config(bg='white', font=('times', 24, 'italic'))
        label17.grid(row=5, column=8, padx=55, pady=5, ipadx=45, ipady=0)
        label17.config(text=total)

    elif number == 4:
        quant4 = quant4 + 1
        price=quant4*price4
        tprice4=price

        label13 = tk.Label(mainWindow, text='', width=2, height=2)
        label13.config(bg='beige', font=('times', 24, 'italic'))

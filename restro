        label17.grid(row=5, column=8, padx=55, pady=5, ipadx=45, ipady=0)
        label17.config(text=total)

    elif number == 5:
        quant5 = quant5 + 1
        price = quant5 * price4
        tprice5=price

        label13 = tk.Label(mainWindow, text='', width=2, height=2)
        label13.config(bg='beige', font=('times', 24, 'italic'))
